<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".Segitiga" android:id="@+id/frameLayout">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/in_alas" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.06999999" app:layout_constraintHorizontal_bias="0.0"
            android:hint="@string/masukkan_alas" android:autofillHints=""/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/in_tinggi" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/in_alas" app:layout_constraintHorizontal_bias="0.0"
            android:hint="@string/masukkan_tinggi" android:autofillHints=""/>
    <Button
            android:text="@string/hitung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_hitungSegitiga" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/in_tinggi" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/luas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_alas" app:layout_constraintStart_toStartOf="@+id/bt_hitungSegitiga"
            app:layout_constraintEnd_toEndOf="@+id/bt_hitungSegitiga" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_hitungSegitiga" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="@string/_0luas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hasilLuas_Segitiga"
            app:layout_constraintBottom_toBottomOf="@+id/tv_alas" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/tv_alas" app:layout_constraintStart_toEndOf="@+id/tv_alas"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginBottom="16dp"
            tools:ignore="RtlHardcoded"/>
    <TextView
            android:text="@string/keliling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_keliling" app:layout_constraintStart_toStartOf="@+id/tv_alas"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/hasilLuas_Segitiga" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintTop_toBottomOf="@+id/tv_alas"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/_0kelPP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hasilKeliling_segitiga"
            app:layout_constraintBottom_toBottomOf="@+id/tv_keliling"
            app:layout_constraintTop_toTopOf="@+id/tv_keliling" app:layout_constraintStart_toEndOf="@+id/tv_keliling"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" tools:ignore="RtlHardcoded"/>
</androidx.constraintlayout.widget.ConstraintLayout>